<extension xmlns="http://ns.adobe.com/air/extension/20.0">
    <id>com.freshplanet.ane.AirNetworkInfo</id>
    <versionNumber>1</versionNumber>
    <platforms>
        <platform name="iPhone-ARM">
            <applicationDeployment>
                <nativeLibrary>libAirNetworkInfo.a</nativeLibrary>
                <initializer>AirNetworkInfoInitializer</initializer>
                <finalizer>AirNetworkInfoFinalizer</finalizer>
            </applicationDeployment>
        </platform>

        <platform name="Android-ARM">
            <applicationDeployment>
                <nativeLibrary>libAirNetworkInfo.jar</nativeLibrary>
                <initializer>com.freshplanet.ane.AirNetworkInfo.AirNetworkInfoExtension</initializer>
                <finalizer>com.freshplanet.ane.AirNetworkInfo.AirNetworkInfoExtension</finalizer>
            </applicationDeployment>
        </platform>
        
        <platform name="default"> 
            <applicationDeployment/> 
        </platform> 
    </platforms>
</extension>